<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>
    <body>
        <div>
            <div>
                <nav class="navbar navbar-light bg-secondary" style="margin-bottom: 20px; margin-top: 20px;">
                    <div class="container-fluid">
                      <form class="d-flex">
                        <a href="/home" style="color: white; " class="text-decoration-none"><button class="btn btn-primary position-relative" style="position: relative; left: 20px; top: 10px;"><i class="bi bi-house-door-fill"></i>Home</button></a>

                        <button class="btn btn-success" style="position: relative; left: 360px; top: 10px;"><a href="/default" style="color: white;" class="text-decoration-none">default</a></button>

                        <button class="btn btn-success" style="position: relative; left: 380px; top: 10px;"><a href="/sortbypriceasc" style="color: white;" class="text-decoration-none">Low_High</a></button>

                        <button class="btn btn-success" style="position: relative; left: 400px; top: 10px;"><a href="/sortbypricedec" style="color: white;" class="text-decoration-none">High-Low</a></button>

                        <button class="btn btn-primary position-relative" style="margin-right: 40px; position: relative; left: 750px; top: 10px;"><i class="bi bi-cart"></i><a href="/cart" style="color: white; " class="text-decoration-none">Cart</a>
                            <span class="position-absolute top-0 start-100 translate-middle p-0 bg-dark border border-light rounded-circle">
                                <span class="badge badge-primary">
                                    <%= cart.length %>
                                </span></button>
                            </span>
                          </button>
                      </form>
                    </div>
                  </nav>
                </div>
                <div class="row row-cols-1 row-cols-md-2 g-4" >
                        <% data.forEach(function(product){ %>
                            <div class="card img-thumbnail" style="width: 400px; margin: 20px; height: 600px; box-shadow: 7px 7px 7px gray; margin-top: 20px; margin-left: 150px;">
                        <img src="<%= product.image %>" width="150px" style="margin-left: 50px;">
                        <div class="card-body">
                            <b><%= product.title %></b>
                            <h6>Price::<%= product.price %></h6>
                            <p><%= product.description.slice(0,280) %></p>
                        </div>
                        <div class="card-footer">
                            <button style="margin-left: 100px;" class="btn btn-success"><a href="/addtocart/<%= product._id %>" class="text-decoration-none" style="color: white;">Add to cart</a></button>
                        </div>
                        
                      </div>
                      <% }) %>
                    
                   
                

        </div>
       
         
    </body>
</html>