<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>
    <body>
        <div>
            <div>
                <nav class="navbar navbar-light bg-secondary" style="margin-bottom: 20px; margin-top: 20px;">
                    <div class="container-fluid">
                      <form class="d-flex">
                        <button class="btn btn-primary position-relative" style="position: relative; left: 20px; top: 10px;"><i class="bi bi-house-door-fill"></i><a href="/home" style="color: white; " class="text-decoration-none">Home</a></button>
                        <button class="btn btn-primary position-relative" style="margin-right: 40px; position: relative; left: 950px; top: 10px;"><i class="bi bi-cart"></i><a href="/cart" style="color: white; " class="text-decoration-none">Cart</a>
                            <span class="position-absolute top-0 start-100 translate-middle p-0 bg-dark border border-light rounded-circle">
                                <span class="badge badge-primary">
                                   <%= Cart.length %>
                                </span></button>
                            </span>
                          </button>
                      </form>
                    </div>
                  </nav>
                </div>
                <div class="row row-cols-1 row-cols-md-2 g-4" >
            <% Cart.forEach(function(cart){ %>
                <div class="card img-thumbnail" style="width: 100%; margin: 20px; height: 400px; box-shadow: 5px 5px 7px green; margin-top: 40px; margin-left: 20px; margin-bottom: -15px;">
            <img src="<%= cart.image %>" width="150px" style="margin-left: 50px; margin-top: 10px;">
            <div class="card-body">
                <b><%= cart.title %></b>
                <h6>Price::<%= cart.price %></h6>
                <button class="btn btn-info" style="margin-right: 20px;"><a href="/dec/<%= cart._id %>" class="text-decoration-none" style="color: white;">-</a></button>
                <span style="position: absolute; left: 70px;"><%= cart.count %></span>
                <button class="btn btn-info text-" style="position: absolute; left: 90px;"><a href="/inc/<%= cart._id %>" class="text-decoration-none" style="color: white;">+</a></button>
                <button class="btn btn-danger" style="position: absolute; left: 180px; color: white;"><a href="/remove/<%= cart._id %>" class="text-decoration-none" style="color: white;">Remove</a></button>
                <p class="card-text text-success" style="font-size: large; font-weight: bold; position: absolute; left: 380px; top: 220px;">Price::$<%= cart.count*cart.price %></p>
            </div>
            
          </div>
          <% }) %>
          
        </div>
        <div style="margin: 20px; color: green;">
            <h1>Total Price::
                <% price = Cart.reduce(function(acc,a,i){ %>
                    <% return acc+=a.price*a.count %>
                <% },0) %>
                <%= price %>
            </h1>
        </div>

        
        
    </body>
</html>